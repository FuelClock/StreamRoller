{
    "opts": {
        "template": "_streamroller-template",
        "encoding": "utf8",
        "destination": "./public/",
        "recurse": true,
        "readme": "../../README.md"
        //"tutorials": "path/to/tutorials", // same as -u path/to/tutorials
    },
    "plugins": [
        "plugins/streamroller"
    ],
    "recurseDepth": 10,
    "source": {
        "include": [
            "../../"
        ],
        "exclude": [],
        "includePattern": ".+\\.(m|)js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_|node_modules|~~.*|chatdata|apidocs|test-ext"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": [
            true
        ],
        "dictionaries": [
            "jsdoc"
            //"closure"
        ]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}