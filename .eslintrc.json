{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }]
    },
    "overrides": [
    {
      "files": [ "./**/*.js" ],
      "rules": {
        "quotes": [ 2, "double" ]
      }
    }
  ],
  "ignorePatterns": ["node_modules", "src/frontend/generated/*"]
}
